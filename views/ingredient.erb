<h2><%= @ingredient.ingredient_name() %></h2>

<% if @ingredient.recipes().any?() %>
<ul>
  <% @ingredient.recipes().order("recipe_name").each() do |recipe| %>
  <li><a href="/recipes/<%= recipe.id() %>"><%= recipe.recipe_name() %></a></li>
  <% end %>
</ul>
<% else %>
<p>There are no recipes using this ingredient yet!</p>
<% end %>
